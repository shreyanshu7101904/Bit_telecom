<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.telecom.bit.bit_telecom.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
          android:id="@+id/textView1"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_alignStart="@+id/textView2"
          android:layout_marginStart="66dp"
          android:gravity="center_horizontal"
          android:marqueeRepeatLimit="marquee_forever"
          android:textColor="#7CB342"
          android:textSize="20sp"
          tools:ignore="InvalidId" />
      <TextView
    android:id="@+id/textpara"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
          android:textColor="#000000"
    android:layout_gravity="center_horizontal|center"
          android:gravity="start"
    android:text="@string/Paragraph"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/textdes"
          android:layout_below="@+id/textpara"
          android:text="@string/para"
          android:layout_margin="5dp"
          android:textColor="#000000"
          android:layout_gravity="center_vertical|right"
          android:gravity="left"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          />
   <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/imageH"
    android:layout_below="@+id/textdes"
    android:layout_marginTop="15dp"
    android:src="@drawable/hod_mam"
    android:foregroundGravity="center"
    tools:ignore="InvalidId"
       android:contentDescription="@string/dr_shanthala_s"
    android:background="@color/colorPrimaryDark"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imageH"
          android:layout_marginTop="15dp"
          android:text="@string/dr_shanthala_s"
          android:layout_marginStart="10dp"
          android:textColor="#00ACC1"
          android:id="@+id/textView2" />
  </RelativeLayout>

    </ScrollView>


</RelativeLayout>
